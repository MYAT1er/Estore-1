{# templates/panier/panier.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
  <h1>Votre Panier</h1>

  {% if jeuxCommandes is empty %}
    <p>Votre panier est vide.</p>
{% else %}
    <ul>
        {% for commande in jeuxCommandes %}
            <li>{{ commande.getIdJeux().nom }} - {{ commande.getNombresCommandes() }}</li>
        {% endfor %}
    </ul>
    <p>Prix total : {{ prixTotal }}</p>
{% endif %}

{% endblock %}
