{% extends 'base.html.twig' %}

{% block title %}Jeux index{% endblock %}



{% block body %}
    <h1>Jeux index</h1>

    <a href="{{ path('app_jeux_new') }}">Ajouter un jeu</a>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Plateforme</th>
                <th>Prix</th>
                <th>StockDisponible</th>
                <th>DateSortie</th>
                <th>Editeur</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for jeux in jeuxes %}
            <tr>
                <td><a href="{{ path('app_jeux_show', {'id': jeux.id}) }}">{{ jeux.nom }}</a></td>
                <td>{{ jeux.plateforme }}</td>
                <td>{{ jeux.prix }}</td>
                <td>{{ jeux.stockDisponible }}</td>
                <td>{{ jeux.dateSortie ? jeux.dateSortie|date('Y-m-d') : '' }}</td>
                <td>{{ jeux.editeur }}</td>
                <td><img class="image-form" src=" {{ asset('images/' ~ jeux.image)  }}" > </td>
                <td>
                    <a href="{{ path('app_jeux_edit', {'id': jeux.id}) }}">Modifier</a>
                    {{ include('jeux/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
