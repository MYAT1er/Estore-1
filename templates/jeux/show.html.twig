{% extends 'base.html.twig' %}

{% block title %}Jeux{% endblock %}

{% block body %}
    <h1>Jeux</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ jeux.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ jeux.description }}</td>
            </tr>
            <tr>
                <th>Plateforme</th>
                <td>{{ jeux.plateforme }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ jeux.prix }}</td>
            </tr>
            <tr>
                <th>StockDisponible</th>
                <td>{{ jeux.stockDisponible }}</td>
            </tr>
            <tr>
                <th>DateSortie</th>
                <td>{{ jeux.dateSortie ? jeux.dateSortie|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Editeur</th>
                <td>{{ jeux.editeur }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_jeux_index') }}">back to list</a>

    <a href="{{ path('app_jeux_edit', {'id': jeux.id}) }}">edit</a>

    {{ include('jeux/_delete_form.html.twig') }}
